<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.kbw.maximalerfluss.Controller">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
      <children>
         <HBox fx:id="hbox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="1000.0" style="-fx-border-color: blue;">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </HBox>
      </children>
   </VBox>
   <HBox alignment="CENTER">
      <children>
         <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <children>
               <VBox style="-fx-border-color: grey; -fx-border-radius: 10;">
                  <children>
                     <TextField fx:id="startknoten_setzen" maxWidth="-Infinity" prefWidth="200.0">
                        <VBox.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </VBox.margin>
                     </TextField>
                     <Button mnemonicParsing="false" onAction="#startknotenSetzen" text="Startknoten setzen">
                        <VBox.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </VBox.margin>
                     </Button>
                  </children>
                  <VBox.margin>
                     <Insets bottom="5.0" top="5.0" />
                  </VBox.margin>
               </VBox>
               <VBox layoutX="10.0" layoutY="10.0" style="-fx-border-color: grey; -fx-border-radius: 10;">
                  <children>
                     <TextField fx:id="zielknoten_setzen" maxWidth="-Infinity" prefWidth="200.0">
                        <VBox.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </VBox.margin>
                     </TextField>
                     <Button mnemonicParsing="false" onAction="#zielknotenSetzen" text="Zielknoten setzen">
                        <VBox.margin>
                           <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </VBox.margin>
                     </Button>
                  </children>
                  <VBox.margin>
                     <Insets bottom="5.0" top="5.0" />
                  </VBox.margin>
               </VBox>
            </children>
         </VBox>
         <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <children>
               <HBox alignment="CENTER_RIGHT">
                  <Label text="Anzahl Zeilen: " />
                  <TextField fx:id="anzahl_zeilen" />
                  <VBox.margin>
                     <Insets bottom="50.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_RIGHT">
                  <Label text="Anzahl Spalten: " />
                  <TextField fx:id="anzahl_spalten" />
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
               </HBox>
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox alignment="CENTER_RIGHT" layoutX="30.0" layoutY="595.0">
      <children>
         <Label fx:id="info" textFill="RED" />
      </children>
   </HBox>
   <HBox alignment="CENTER_RIGHT">
      <Button mnemonicParsing="false" onAction="#generate" text="generate" textAlignment="CENTER" />
   </HBox>
</VBox>
